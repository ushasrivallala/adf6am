{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_adls_datafiles_input_customer1",
						"type": "DatasetReference"
					},
					"name": "srcCustomer"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_azSQL_DATASTORE_customer1",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CustomerKey as short,",
				"          CustomerName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> srcCustomer",
				"srcCustomer derive(FirstName = left(CustomerName,instr(CustomerName, ' ')),",
				"          LastName = right(CustomerName,length(CustomerName)-instr(CustomerName,' '))) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          CustomerKey as integer,",
				"          CustomerName as string,",
				"          FirstName as string,",
				"          LastName as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}